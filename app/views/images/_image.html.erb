
<div class="col-sm-3">
    <figure class="figure">
    <%= image_tag image.picture.thumb.url, class: 'figure-img img-fluid rounded' %> 
    <figcaption class="figure-caption">
        <%= image.description %>
                 title <%= image.title %>

         Publicado <%= image.created_at %>

            
        <%= link_to t('.edit_link'),edit_image_path(image) %> 
        <%= link_to t('.remove_link'),image, method: :delete,data:{confirm: 'Seguro?'} %>
    </figcaption>
    </figure>
</div>
